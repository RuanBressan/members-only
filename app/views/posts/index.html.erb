<h2 class="text-3xl font-bold mb-6 text-center">Posts Secretos</h2>

<div class="space-y-4">
  <% @posts.each do |post| %>
    <div class="bg-white p-6 rounded-lg shadow border">
      <p class="text-lg"><strong>Post:</strong> <%= post.context %></p>

      <% if user_signed_in? %>
        <p class="text-sm text-gray-600 mt-2"><strong>Autor:</strong> <%= post.user.email %></p>
      <% end %>
    </div>
  <% end %>
</div>
