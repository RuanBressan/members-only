<h2 class="text-2xl font-bold mb-4">Login</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-4 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.password_field :password, class: "w-full border border-gray-300 rounded px-4 py-2" %>
  </div>

  <div>
    <%= f.submit "Entrar", class: "bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700" %>
  </div>
<% end %>
